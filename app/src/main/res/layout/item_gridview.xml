<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mRelative"
        android:layout_width="90dp"
        android:layout_height="90dp">

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_wddb_dbsp" />

        <TextView
            android:id="@+id/mTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mImageView"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="温馨提示" />

    </RelativeLayout>

    <View
        android:id="@+id/mView_under"
        android:layout_width="90dp"
        android:layout_height="1dp"
        android:layout_below="@+id/mRelative"
        android:background="@color/colorAccent"></View>

    <View
        android:id="@+id/mView_right"
        android:layout_width="1dp"
        android:layout_height="91dp"
        android:layout_toRightOf="@+id/mRelative"
        android:background="@color/colorAccent"></View>
</RelativeLayout>
